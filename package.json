{
  "name": "argv-flags",
  "version": "1.0.3",
  "description": "Schema-driven CLI flag parser for Node.js, Deno, and Bun.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema/parse-result.schema.json": "./schema/parse-result.schema.json"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist",
    "schema",
    "jsr.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "lint": "eslint .",
    "test": "npm run build && npm run lint && node --test",
    "check": "node ./scripts/verify-runtime-versions.js && node ./scripts/workflow-policy-check.mjs && node ./scripts/esm-only-guard.mjs && node ./scripts/docs-policy-check.mjs && npm run test",
    "jsr:dry": "deno publish --dry-run --allow-dirty",
    "jsr:score": "node ./scripts/jsr-score-gate.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ismail-elkorchi/argv-flags.git"
  },
  "keywords": [
    "argv",
    "cli",
    "flags",
    "parser"
  ],
  "author": "Ismail El Korchi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ismail-elkorchi/argv-flags/issues"
  },
  "homepage": "https://github.com/Ismail-elkorchi/argv-flags#readme",
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "ajv": "^8.17.1",
    "eslint": "^10.0.2",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^4.0.0",
    "globals": "^17.2.0",
    "typescript": "^5.5.4"
  }
}
